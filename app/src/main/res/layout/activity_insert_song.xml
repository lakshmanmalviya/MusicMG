<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.InsertSong">

    <TextView
        android:id="@+id/categoryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_bg2"
        android:padding="3dp"
        android:text="You are inserting the bollywood song"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/file" />

            <Button
                android:id="@+id/brwSong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Browse song"
                android:textAllCaps="false" />

            <ImageView
                android:id="@+id/songCover"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@drawable/placeholder" />

            <Button
                android:id="@+id/songCoverBrw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Browse song Cover"
                android:textAllCaps="false" />

            <EditText
                android:id="@+id/songName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_bg"
                android:ems="10"
                android:hint="Enter the song Name"
                android:inputType="textMultiLine|textPersonName"
                android:padding="3dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHint="#CDC7C7"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/insertSong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Insert"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/wait"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/text_bg2"
                android:padding="20dp"
                android:text="wait we are Uploading the song"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>