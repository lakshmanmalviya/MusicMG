<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.InsertSongCategory">

    <TextView
        android:id="@+id/bwS989ong2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_bg2"
        android:padding="3dp"
        android:text="You are inserting the category of Songs"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/categoryImg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/placeholder" />

            <Button
                android:id="@+id/brCatImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="browse category image"
                android:textAllCaps="false" />

            <EditText
                android:id="@+id/categoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_bg"
                android:ems="10"
                android:hint="Category Name in one word "
                android:inputType="textMultiLine|textPersonName"
                android:padding="3dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHint="#CDC7C7"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/categoryLongName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_bg"
                android:ems="10"
                android:hint="Category Name for showing purpose"
                android:inputType="textMultiLine|textPersonName"
                android:padding="3dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHint="#CDC7C7"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/insertCat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Insert"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/waitCat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/text_bg2"
                android:padding="20dp"
                android:text="wait we are Uploading the song"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>